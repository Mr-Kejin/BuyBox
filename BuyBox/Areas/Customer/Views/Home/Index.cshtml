@model List<Product>
<partial name="_Notification" />
    <div class="row pb-3">
        @foreach (var product in Model)
        {
            <div class="col-ig-3 col-sm-3">
                <div class="row p-2">

                    <div class="col-12 p-1">
                      <div class="card border-0 p-3 shadow border-top border-5 rounded">


                        <div class="col-12 col-lg-3  mb-3 mx-auto">
                            <img src="@product.ImageUrl" width="250px" height="100px" class="card-img-top rounded" />

                       </div>

                          <div class="card-body pb-0">
                              <div class="pt-1">
                                  <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                                    <p class="card-title text-warning text-center"> by Goodwill stones  </p>
                              </div>
                                <div class="pt-1">
                                    <p class="text-dark opacity-75  text-center pb-o">List Price: 
                                        <span class="text-decoration-line-through">
                                        @product.ListPrice.ToString("c")
                                        </span>
                                    </p>
                                </div>
                                <div class="pt-1">
                                    <p class="text-dark opacity-75  text-center"> buy it As low as:
                                        <span>
                                            @product.Price100.ToString("c")
                                        </span> 
                                   </p>
                                </div>
                          </div>
                      </div>
                      <a asp-action="Details"
                       asp-route-productId="@product.Id"
                      class="btn btn-primary bg-gradient border-0 form-control">
                          Details
                      </a>
                    </div>
                </div>
            </div>
        }
    </div>
