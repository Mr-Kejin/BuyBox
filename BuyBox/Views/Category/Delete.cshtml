@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Name" disabled class="form-control border-0 shadow" />
            <label asp-for="Name" class="ms-2"></label>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
            <label asp-for="DisplayOrder" class="ms-2"></label>
        </div>

        <div class="row mt-3">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-danger form-control">Delete </button>
            </div>
            <div class="col-6 row col-md-3">
                <a asp-controller="Category" asp-action="Index" class=" btn btn-outline-secondary border form-control">
                    Return to list
                </a>
            </div>
        </div>

    </div>
</form>